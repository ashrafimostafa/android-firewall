<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.appusage.permissionsheet.AppUsagePermissionSheet">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/normal_txt"
            android:text="@string/app_usage_permission_status"/>

        <TextView
            android:id="@+id/app_usage_permission_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/normal_txt"
            android:layout_marginStart="5dp"/>

        <ProgressBar
            android:id="@+id/app_usage_permission_progress"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    </LinearLayout>

</FrameLayout>