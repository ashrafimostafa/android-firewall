<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.setting.SettingFragment">

    <CheckBox
        android:id="@+id/setting_admin_permission"
        style="@style/normal_txt"
        android:text="@string/enable_admin_permission" />

    <CheckBox
        android:id="@+id/setting_allow_uninstall"
        style="@style/normal_txt"
        android:text="@string/enable_disable_uninstall" />

    <CheckBox
        android:id="@+id/setting_always_on_vpn"
        style="@style/normal_txt"
        android:text="@string/enable_disable_always_on_vpn" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/setting_add_profile"
        style="@style/normal_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/create_profile" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/setting_lock_phone"
        style="@style/normal_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/lock_phone" />

</LinearLayout>